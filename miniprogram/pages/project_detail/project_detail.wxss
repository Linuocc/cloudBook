.UCenter-bg {
  background-color: white;
  height: 150rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #008DF0;
  font-weight: 300;
  font-size: 50rpx !important;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.btn-area{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background: #F6F6F6;
}
.btn-area button{
  width: 100%;
}
